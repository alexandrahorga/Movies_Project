@model IEnumerable<Movies_Project.Models.Actor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index Actori</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                Titlu Film
            </th>
            <th>
                Manager
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @if (item.Movie != null)
                    {
                        @Html.DisplayFor(modelItem => item.Movie.Title)
                    }
                </td>
                <td>
                    @if (item.Manager != null)
                    {
                        @Html.DisplayFor(modelItem => item.Manager.Name)
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ActorID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ActorID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ActorID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>