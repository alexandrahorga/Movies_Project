@using ManagerService // Numele namespace-ului generat de gRPC (din manager_crud.proto)
@model ManagerList // Modelul este ManagerList, care conține colecția

@{
    ViewData["Title"] = "Index Manageri (gRPC)";
}

<h1>Index Manageri (gRPC)</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Adress
            </th>
            <th>
                BirthDate
            </th>
            <th>Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Item.Any())
        {
            @foreach (var item in Model.Item)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ManagerId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ManagerId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ManagerId">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">Nu au fost găsiți manageri (eroare de conexiune gRPC sau lista este goală).</td>
            </tr>
        }
    </tbody>
</table>