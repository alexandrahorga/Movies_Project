@model IEnumerable<Movies_Project.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index Filme</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Adaugă Film Nou</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color mb-3">
        <p>
            Căutare după Titlu:
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Căutare" class="btn btn-primary btn-sm" />
            <a asp-action="Index" class="btn btn-secondary btn-sm">Listă Completă</a>
        </p>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParm"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(model => model.Title)

                    @if (ViewData["CurrentSort"]?.ToString() == "title_desc")
                    {
                        <span class="text-danger"> ↓</span>
                        // Descrescător
                    }
                    else if (ViewData["CurrentSort"]?.ToString() == null)
                    {
                        <span class="text-success"> ↑</span>
                        // Implicita: Crescător
                    }
                </a>
            </th>

            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["DirectorSortParm"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(model => model.Director)

                    @if (ViewData["CurrentSort"]?.ToString() == "Director")
                    {
                        <span class="text-success"> ↑</span>
                        // Crescător
                    }
                    else if (ViewData["CurrentSort"]?.ToString() == "director_desc")
                    {
                        <span class="text-danger"> ↓</span>
                        // Descrescător
                    }
                </a>
            </th>

            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["BudgetSortParm"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(model => model.Budget)

                    @if (ViewData["CurrentSort"]?.ToString() == "Budget")
                    {
                        <span class="text-success"> ↑</span>
                        // Crescător
                    }
                    else if (ViewData["CurrentSort"]?.ToString() == "budget_desc")
                    {
                        <span class="text-danger"> ↓</span>
                        // Descrescător
                    }
                </a>
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                Actori
            </th>
            <th>Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @if (item.Director != null)
                    {
                        @Html.DisplayFor(modelItem => item.Director.FirstName)
                        @: @Html.DisplayFor(modelItem => item.Director.LastName)
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Budget)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre.Name)
                </td>

                <td>
                    @if (item.Actors != null && item.Actors.Any())
                    {
                        <ul class="list-unstyled">
                            @foreach (var actor in item.Actors)
                            {
                                <li>
                                    <strong>@actor.Name</strong>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>Niciun actor asociat.</span>
                    }
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-info">Detalii</a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-outline-danger">Șterge</a>
                </td>
            </tr>
        }
    </tbody>
</table>